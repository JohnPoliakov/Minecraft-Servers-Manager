<Window x:Class="Minecraft_Server_Manager.Views.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Notification" 
        Width="450" 
        MinHeight="160"
        MaxHeight="600"
        SizeToContent="Height"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Topmost="True">

    <Border Background="#2c3e50" BorderBrush="Black" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" ShadowDepth="5" Opacity="0.5"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="#34495e" MouseLeftButtonDown="DragWindow">
                <TextBlock x:Name="TitleText" Text="TITRE" Foreground="#bdc3c7" FontWeight="Bold" 
                           VerticalAlignment="Center" Margin="15,0,0,0"/>
            </Border>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,15,0,5">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock x:Name="MessageText" 
                   Text="Votre message ici..." 
                   Foreground="White" FontSize="14" 
                   TextWrapping="Wrap" 
                   TextAlignment="Center"
                   HorizontalAlignment="Center" 
                   Margin="25,0,25,15"/>

                    <TextBox x:Name="InputTextBox"
                             Width="300" Height="30"
                             Margin="0,0,0,15"
                             Background="#ecf0f1" Foreground="#2c3e50"
                             VerticalContentAlignment="Center" Padding="5"
                             FontWeight="Bold" BorderThickness="0"
                             Visibility="Collapsed"/>

                    <ProgressBar x:Name="LoadingBar" 
                     IsIndeterminate="True" 
                     Height="8" 
                     Width="250"
                     Background="#34495e"
                     Foreground="#f1c40f"
                     BorderThickness="0"
                     Visibility="Collapsed" 
                     Margin="0,0,0,10"/>
                </StackPanel>
            </ScrollViewer>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,15,15">

                <Button x:Name="BtnYes" Content="CONFIRMER" Click="BtnYes_Click"
                        Width="100" Height="35" Margin="5,0"
                        Background="#27ae60" Foreground="White" FontWeight="Bold" Cursor="Hand" BorderThickness="0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button x:Name="BtnNo" Content="ANNULER" Click="BtnNo_Click"
                        Width="100" Height="35" Margin="5,0"
                        Background="#e74c3c" Foreground="White" FontWeight="Bold" Cursor="Hand" BorderThickness="0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>