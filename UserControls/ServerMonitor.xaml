<UserControl x:Class="Minecraft_Server_Manager.UserControls.ServerMonitor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">

    <Grid Background="#2c3e50">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Padding="20" Background="#34495e">
            <StackPanel>
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="{Binding DisplayName, StringFormat='CONFIGURATION DU SERVEUR: {0}'}" Foreground="#bdc3c7" FontSize="12" FontWeight="Bold" VerticalAlignment="Center"/>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">

                        <TextBlock Text="{Binding ServerStatusText}" 
                           Foreground="{Binding StatusColor}" 
                           FontWeight="Bold" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,0"
                           FontSize="12"/>


                        <StackPanel Orientation="Horizontal" >
                            <Button Width="50" Margin="0,0,20,0" 
        Command="{Binding DataContext.EditServerCommand, RelativeSource={RelativeSource AncestorType=Window}}"
        CommandParameter="{Binding ServerProfile}"
        Background="Transparent" 
        BorderThickness="0" 
        Cursor="Hand">

                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>

                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Opacity" Value="0.8"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>

                                <Border Background="#34495e" CornerRadius="5" Padding="8">
                                    <Image Source="/Resources/gear-settings.png" Stretch="Uniform"/>
                                </Border>

                            </Button>
                            <ToggleButton IsChecked="{Binding IsRunning}"
                              IsEnabled="{Binding IsSwitchEnabled}"  Command="{Binding ToggleServerCommand}"
                              Cursor="Hand"
                              Width="50" Height="26">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Grid>
                                            <Border x:Name="Track" 
                                                Background="#7f8c8d" 
                                                CornerRadius="13"/>

                                            <Border x:Name="Thumb" 
                                                Width="20" Height="20" 
                                                HorizontalAlignment="Left" 
                                                Margin="3,0,0,0" 
                                                Background="White" 
                                                CornerRadius="10">
                                                <Border.Effect>
                                                    <DropShadowEffect ShadowDepth="1" Direction="270" Opacity="0.3" BlurRadius="2"/>
                                                </Border.Effect>
                                            </Border>
                                        </Grid>

                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter TargetName="Track" Property="Background" Value="#27ae60"/>
                                                <Setter TargetName="Thumb" Property="HorizontalAlignment" Value="Right"/>
                                                <Setter TargetName="Thumb" Property="Margin" Value="0,0,3,0"/>
                                            </Trigger>

                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter TargetName="Track" Property="Opacity" Value="0.5"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>

                        </StackPanel>
                        
                        
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Margin="15,0,15,15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="#1e1e1e" BorderBrush="#7f8c8d" BorderThickness="1,1,1,0" CornerRadius="5,5,0,0">
                    <TextBox x:Name="ConsoleOutput"
                     Text="{Binding ServerLogs, Mode=OneWay}"
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     Background="Transparent"
                     Foreground="#ecf0f1"
                     FontFamily="Consolas"
                     FontSize="13"
                     BorderThickness="0"
                     Padding="10"
                     AcceptsReturn="True"
                     TextChanged="ConsoleOutput_TextChanged"/>
                </Border>

                <Border Grid.Row="1" Background="#34495e" BorderBrush="#7f8c8d" BorderThickness="1,0,1,1" CornerRadius="0,0,5,5" Padding="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text=">" Foreground="#27ae60" FontWeight="Bold" FontSize="16" VerticalAlignment="Center" Margin="5,0,5,0"/>

                        <TextBox Grid.Column="1"
                         Text="{Binding CommandInput, UpdateSourceTrigger=PropertyChanged}"
                         Background="Transparent"
                         Foreground="White"
                         CaretBrush="White"
                         BorderThickness="0"
                         FontFamily="Consolas"
                         FontSize="14"
                         VerticalAlignment="Center"
                         Padding="5">
                            <TextBox.InputBindings>
                                <KeyBinding Key="Return" Command="{Binding SendCommand}"/>
                            </TextBox.InputBindings>
                        </TextBox>

                        <Button Grid.Column="2" Content="Envoyer" Command="{Binding SendCommand}"
                        Background="#2980b9" Foreground="White" BorderThickness="0" Cursor="Hand" Padding="15,5" Margin="5,0,0,0" Width="65">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="3">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </Border>
            </Grid>

            <Border Grid.Column="1" Background="#2c3e50" Padding="15">
            </Border>
        </Grid>

    </Grid>
</UserControl>