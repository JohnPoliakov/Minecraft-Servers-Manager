<UserControl x:Class="Minecraft_Server_Manager.UserControls.SidebarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             mc:Ignorable="d" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             d:DesignHeight="600" d:DesignWidth="800">

    <Grid Background="#2c3e50">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="MES SERVEURS" Foreground="White" 
                   Margin="0,20,0,10" FontWeight="Bold" HorizontalAlignment="Center"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="0,0,0,10">
            <ItemsControl ItemsSource="{Binding Servers}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Content="{Binding DisplayName}" 
                    Height="40" Margin="5,2"
                    Background="#34495e" Foreground="White" BorderThickness="0" Cursor="Hand"
                    
                    Command="{Binding DataContext.MonitorServerCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    
                    CommandParameter="{Binding}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <StackPanel Grid.Row="2" VerticalAlignment="Bottom">
            <Separator Background="#7f8c8d" Margin="10,0,10,10"/>
            <Button Content="+ Ajouter un serveur" Height="40" Margin="15,0,15,20"
                    Background="#27ae60" Foreground="White" BorderThickness="0" Cursor="Hand"
                    FontFamily="{StaticResource MC-Font}"/>
        </StackPanel>
    </Grid>
</UserControl>