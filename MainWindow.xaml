<Window x:Class="Minecraft_Server_Manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Minecraft_Server_Manager"
        mc:Ignorable="d"
        Title="Minecraft Server Manager"  MinHeight="920" MinWidth="1500" WindowStyle="ThreeDBorderWindow" Closing="Window_Closing">

    <Window.Resources>
        <Storyboard x:Key="AnimTitleOut" AutoReverse="False">
            <ThicknessAnimation Storyboard.TargetName="lbTitle" Storyboard.TargetProperty="Margin" Duration="0:0:0.3"  From="10,5,0,4" To="-20,5,0,4" />
            <DoubleAnimation Storyboard.TargetName="lbTitle" Storyboard.TargetProperty="Opacity" From="1"  To="0" Duration="0:0:0.3" />
        </Storyboard>
        <Storyboard x:Key="AnimTitleIn" AutoReverse="False">
            <ThicknessAnimation Storyboard.TargetName="lbTitle" Storyboard.TargetProperty="Margin" Duration="0:0:0.3"  From="40,5,0,4" To="10,5,0,4" />
            <DoubleAnimation Storyboard.TargetName="lbTitle" Storyboard.TargetProperty="Opacity" From="0"  To="1" Duration="0:0:0.3" />
        </Storyboard>
        <Storyboard x:Key="AnimBlinkSlow" AutoReverse="True">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1"  To="0.5" Duration="0:0:0.3" />
        </Storyboard>
        <Storyboard x:Key="AnimShakeBadge" AutoReverse="True">
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="0,0,0,0" To="20,0,0,0" Duration="0:0:0.05" AutoReverse="True" RepeatBehavior="2x" FillBehavior="Stop"/>
        </Storyboard>
        <Storyboard x:Key="AnimWaitEllipse" RepeatBehavior="Forever">
            <DoubleAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="ellipseAnim" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[2].(RotateTransform.Angle)">
                <SplineDoubleKeyFrame KeyTime="00:00:02" Value="360"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="FrameworkElement.Loaded">
            <BeginStoryboard Storyboard="{StaticResource AnimWaitEllipse}"/>
        </EventTrigger>
    </Window.Triggers>

    <Grid Name="gridMain" Background="white">
        <Grid Margin="20,20,20,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="80px" />
                <RowDefinition Height="*" />
                <RowDefinition Height="40px" />
            </Grid.RowDefinitions>

            <Border Grid.Row="0" >
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="White" Offset="0"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60*" />
                    </Grid.ColumnDefinitions>



                    <Viewbox Grid.Column="1" HorizontalAlignment="Center">
                        <TextBlock Name="lbTitle" TextWrapping="Wrap" Text="MSM" Margin="0,1,0,1"/>
                    </Viewbox>

                   

                </Grid>
            </Border>

            <Border Grid.Row="1" Background="Transparent" >
                <Grid  Margin="0,40,0,0" >
                    <UserControl Name="ucMain" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
            </Border>

        </Grid>
        <Grid x:Name="gridLoadingScreen" Background="#AAAAAAAA" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="40*" />
                <RowDefinition Height="60*" />
                <RowDefinition Height="40*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="1" Background="White">
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,50,0,120" MaxWidth="1000">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Ellipse Grid.Column="0" x:Name="ellipseAnim" Margin="0,0,10,0" VerticalAlignment="Center" Width="50" Height="50" StrokeThickness="5" RenderTransformOrigin="0.5,0.5">
                        <Ellipse.Stroke>
                            <LinearGradientBrush EndPoint="0.445,0.997" StartPoint="0.555,0.003">
                                <GradientStop Color="White" Offset="0"/>
                                <GradientStop Color="#FF00538E" Offset="1"/>
                            </LinearGradientBrush>
                        </Ellipse.Stroke>
                        <Ellipse.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform/>
                            </TransformGroup>
                        </Ellipse.RenderTransform>
                    </Ellipse>
                    <TextBlock Grid.Column="1" Name="tbLoadingScreen" TextWrapping="Wrap" FontSize="25" VerticalAlignment="Center" Text="Message"></TextBlock>
                </Grid>
            </Grid>
        </Grid>
    </Grid>

</Window>
