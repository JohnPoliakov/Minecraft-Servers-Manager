<Window x:Class="Minecraft_Server_Manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:Minecraft_Server_Manager.UserControls"
        xmlns:converters="clr-namespace:Minecraft_Server_Manager.Converters" 
        
        xmlns:vm="clr-namespace:Minecraft_Server_Manager.ViewModels"
        
        Title="Minecraft Server Manager" Height="700" Width="1100" WindowState="Maximized" ResizeMode="CanMinimize">

    <Window.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <DataTemplate DataType="{x:Type vm:ServerEditorViewModel}">
            <views:ServerEditor />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:ServerMonitorViewModel}">
            <views:ServerMonitor />
        </DataTemplate>
    </Window.Resources>

    <Grid Background="#ecf0f1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Visibility="{Binding ShowSidebar, Converter={StaticResource BoolToVis}}">
            <views:SidebarView />
        </Border>

        <Border Grid.Column="1" Background="#2c3e50">
            <ContentControl Content="{Binding CurrentView}" />
        </Border>
    </Grid>
</Window>